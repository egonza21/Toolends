<div class="container">
  <div class="row">

    <div class="col-md-5 col-md-offset-3">

      <h2>Iniciar sesión<h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field text-left">
          <%= label_tag(:email, "Correo universitario") %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Correo universitario", class: "form-control" %>
        </div>

        <div class="field">
          <%= label_tag(:password, "Contraseña") %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña",class: "form-control"  %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= label_tag(:remember_me, "Recordame") %>
          </div>
        <% end -%>

        <div class="actions col-md-8 center">
          <%= f.submit "Ingresar", class:"btn let"%>
        </div>
      <% end %>
      <div class="actions">
        <%= render "devise/shared/links" %>
      </div>


    </div>
  </div>
</div>
