<form class="field" >
  <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">

  <ul id="myUL">
    <% @tools.each do |tool| %>
     <li><a href="#" class="list-group-item"><%= tool.title %><span class="badge"> <%= tool.quantity %> </span></a></li>
    <% end %>

